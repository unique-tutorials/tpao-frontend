<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="Maaş Oluştur" contentWidth="40%" verticalScrolling="false">
        <f:Form editable="true">
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>EXTRA_DAYS}" visible="{wageRequestListModel>/isAccountVisible}">
                            <f:fields>
                                <Input value="{wageRequestListModel>/salaryCreateList/Extda}" enabled="{wageRequestListModel>/aplicationSetting/paynoEnabled}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Ödeme Türü">
                            <f:fields>
                                <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Paytt' } ] }"
                                 selectedKey="{wageRequestListModel>/salaryCreateList/Paytt}" 
                                 enabled="{wageRequestListModel>/aplicationSetting/paynoEnabled}"
                                 change=".onWageTypeChange">
                                    <core:ListItem additionalText="{Group}" key="{Key}" text="{Value}"/>
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Öğrencinin Hangi Hesabına">
                            <f:fields>
                                <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Wacst' } ] }" selectedKey="{wageRequestListModel>/salaryCreateList/Wacst}" enabled="{wageRequestListModel>/aplicationSetting/paynoEnabled}">
                                    <core:ListItem key="{Key}" text="{Value}"/>
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>STUDENT_NUMBER}">
                            <f:fields>
                                <Input value="{wageRequestListModel>/salaryCreateList/Pernr}" enabled="false" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>OR_ENAME}">
                            <f:fields>
                                <Input value="{wageRequestListModel>/salaryCreateList/Ename}" enabled="false" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>STATIONARY}" visible="{wageRequestListModel>/isAccountVisible}">
                            <f:fields>
                                <Input value="{wageRequestListModel>/salaryCreateList/Stafe}" enabled="false" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>WAGE}" visible="{wageRequestListModel>/isAccountVisible}">
                            <f:fields>
                                <Input value="{wageRequestListModel>/salaryCreateList/Salry}" enabled="false" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Kira" visible="{wageRequestListModel>/isSellerVisible}" >
                            <f:fields>
                                <Input value="{wageRequestListModel>/salaryCreateList/Salry}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>RESTRICTED_SALARY}" visible="{wageRequestListModel>/isAccountVisible}">
                            <f:fields>
                                <Input value="{wageRequestListModel>/salaryCreateList/Consa}" enabled="{wageRequestListModel>/isAccountVisibless}"  />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Toplam Maaş" visible="{wageRequestListModel>/isAccountVisible}">
                            <f:fields>
                                <Input value="{wageRequestListModel>/salaryCreateList/Totwg}" enabled="{wageRequestListModel>/isAccountVisibless}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>CURRENCY}" >
                            <f:fields>
                                <!-- <ComboBox value="{wageRequestListModel>/salaryCreateList/Waers}" enabled="{wageRequestListModel>/isAccountVisibless}" /> -->
                                <ComboBox items="{ path:'/ValueHelpSet' , length: 1000, filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Waers' } ] }" selectedKey="{wageRequestListModel>/salaryCreateList/Waers}" enabled="{wageRequestListModel>/isAccountVisibless}">
                                    <core:ListItem key="{Key}" text="{Value}"/>
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
        <beginButton>
            <Button text="{i18n>CANCEL_ACTION}" type="Reject" press=".onCancelSalaryButtonPress" />
        </beginButton>
        <endButton>
            <Button text="{i18n>SAVE_ACTION}" type="Accept" press=".onSaveSalaryButtonPress" />
        </endButton>
    </Dialog>
</c:FragmentDefinition>
<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
<Dialog title="Onaycı Seçimi" state="None" type="Standard" contentWidth="20%" contentHeight="40%" verticalScrolling="false" resizable="true" draggable="true">
    <VBox class="sapUiSmallMarginBottom">
        <f:Form editable="true">
            <!-- <f:title>
                <core:Title text="{i18n>STUDENT_INFORMATION}" />
            </f:title> -->
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Onaycı">
                            <f:fields>
                                 <ComboBox items="{ path:'/ValueHelpSet' , length : '500', filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Whoap' } ] }" selectedKey="{wageRequestListModel>/approvalList/Whoap}">
                                    <core:ListItem key="{Key}" text="{Value}"/>
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
       </VBox>
<beginButton>
    <Button text="{i18n>CLOSE_BUTTON}" icon="sap-icon://close" type="Back" press=".onApprovalCancelButtonPress" />
</beginButton>
<endButton>
    <Button text="{i18n>SAVE_ACTION}" icon="sap-icon://save" type="Accept" press=".onApprovalSaveButtonPress" />
</endButton>
</Dialog>
</c:FragmentDefinition>
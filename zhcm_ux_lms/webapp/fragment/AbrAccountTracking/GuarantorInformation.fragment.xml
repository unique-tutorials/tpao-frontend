<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <Table mode="MultiSelect" busy="{abrAccountListModel>/tableBusy}" width="auto" items="{abrAccountListModel>/GuarantorList}" noDataText="{i18n>NO_DATA}" busyIndicatorDelay="{abrAccountListModel>/tableBusyDelay}" growing="true" growingScrollToLoad="true" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="{i18n>GUARANTOR_INFORMATION}" level="H2"/>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="{i18n>SEQ_NO}" />
            </Column>
            <Column>
                <Text text="{i18n>OR_VORNA}" />
            </Column>
            <Column>
                <Text text="{i18n>OR_NACHN}" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="{i18n>ACTION_LIST}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <Text text="{abrAccountListModel>Sirno}"/>
                    <Text text="{abrAccountListModel>Vorna}"/>
                    <Text text="{abrAccountListModel>Nachn}"/>
                      <MenuButton icon="sap-icon://settings"  type="Accept">
                            <menu>
                                <Menu>
                                    <MenuItem
                                        text="Kefil Bilgileri"
                                        icon="sap-icon://edit"
                                        press="openGuarantorDialog"
                                    />
                                    <MenuItem
                                        text="İletişim Bilgileri"
                                        icon="sap-icon://delete"
                                        press="openGuarantorContactDialog"
                                    />
                                    <MenuItem
                                        text="Kimlik Bilgileri"
                                        icon="sap-icon://idea-wall"
                                        press="openGuarantorIdentityDialog"
                                    />
                                </Menu>
                            </menu>
                        </MenuButton>   
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <!-- <FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMarginTopBottom">
        <Button text="{i18n>DOC_OF_THE_GUARANTOR}" type="Emphasized" icon="sap-icon://insurance-life" press=".openGuarantorDialog" />
        <HBox>
            <Button text="{i18n>CONTACT}" type="Neutral" class="sapUiSmallMarginEnd" icon="sap-icon://call" press=".openGuarantorContactDialog" />
            <Button text="{i18n>IDENTITY}" type="Neutral" icon="sap-icon://biometric-thumb" press=".openGuarantorIdentityDialog" />
        </HBox>
    </FlexBox> -->
</c:FragmentDefinition>

<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <f:Form editable="true">
        <f:title>
            <core:Title text="{i18n>STUDENT_INFORMATION}" />
        </f:title>
        <f:layout>
            <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false" />
        </f:layout>
        <f:formContainers>
            <f:FormContainer>
                <f:formElements>
                    <f:FormElement label="{i18n>STUDENT_NAME}">
                        <f:fields>
                            <Input value="{requestListModel>/StudentEmployee/Ename}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>STUDENT_SURNAME}">
                        <f:fields>
                            <Input value="{requestListModel>/StudentEmployee/Aname}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>TRAINING_DAY}">
                        <f:fields>
                            <Input value="{requestListModel>/StudentEmployee/Bname}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>COMPULSORY_SERVICE_PERIOD}">
                        <f:fields>
                            <Input value="{requestListModel>/StudentEmployee/Cname}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>DEPARTURE_ABROAD_DATE}">
                        <f:fields>
                            <DatePicker value="{requestListModel>/StudentEmployee/Dname}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>DATE_TO_START_WORK}">
                        <f:fields>
                            <DatePicker value="{requestListModel>/StudentEmployee/Fname}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>CASE_START_DATE}">
                        <f:fields>
                            <DatePicker value="{requestListModel>/StudentEmployee/Gname}" />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
            <f:FormContainer>
                <f:formElements>
                    <f:FormElement label="{i18n>COUNTRY_OF_DESTINATION}">
                        <f:fields>
                            <ComboBox value="{requestListModel>/StudentEmployee/Hname}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>SCHOOL_ATTENDED}">
                        <f:fields>
                            <ComboBox value="{requestListModel>/StudentEmployee/Nname}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>SCHOOL_NUMBER}">
                        <f:fields>
                            <Input value="{requestListModel>/StudentEmployee/Pname}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>TAX_NUMBER_NUB}">
                        <f:fields>
                            <Input value="{requestListModel>/StudentEmployee/Rname}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>TAX_OFFICE_PROVINCE}">
                        <f:fields>
                            <Input value="{requestListModel>/StudentEmployee/Sname}" />
                            <Input value="{requestListModel>/StudentEmployee/Oname}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>COST_CENTER}">
                        <f:fields>
                            <Input value="{requestListModel>/StudentEmployee/Lname}" showValueHelp="true" />
                            <CheckBox text="{i18n>STUDENT_ACTIVE}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>BUDGET_CODE}">
                        <f:fields>
                            <Input value="{requestListModel>/StudentEmployee/Mname}" showValueHelp="true" />
                            <CheckBox text="{i18n>EXECUTOR_DEFENDANT}" />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
</c:FragmentDefinition>
<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <f:Form editable="true">
        <f:title>
            <core:Title text="{i18n>MASTER_SCHOOL_ACCOUNT_INFORMATION}" />
        </f:title>
        <f:layout>
            <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
        </f:layout>
        <f:formContainers>
            <f:FormContainer title="{i18n>OVERSEAS_MASTER_SCHOOL}">
                <f:formElements>
                    <f:FormElement label="{i18n>BANK_NAME}">
                        <f:fields>
                            <Input value="{SupplierName}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>BANK_BRANCH}">
                        <f:fields>
                            <Input value="{Street}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>BANK_CITY}">
                        <f:fields>
                            <Input value="{ZIPCode}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>ACCOUNT_NUMBER}">
                        <f:fields>
                            <Input value="{ZIPCode}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>SWIFT_CODE}">
                        <f:fields>
                            <Input value="{ZIPCode}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>EXPLANATION}">
                        <f:fields>
                            <TextArea rows="5" value="{ZIPCode}" />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
            <f:FormContainer title="">
                <f:formElements>
                    <f:FormElement label="{i18n>IBAN}">
                        <f:fields>
                            <Input value="{Url}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>ACC_NO}">
                        <f:fields>
                            <Input value="{Twitter}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>ABA_NO}">
                        <f:fields>
                            <Input value="{Twitter}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>STUDENT_ID}">
                        <f:fields>
                            <Input value="{Twitter}" />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
</c:FragmentDefinition>
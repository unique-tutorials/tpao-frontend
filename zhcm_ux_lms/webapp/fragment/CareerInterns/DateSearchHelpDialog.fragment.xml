<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
>
<Dialog title="Sorgulama Kriterleri" state="None" type="Standard" contentWidth="80%" contentHeight="80%" verticalScrolling="false">
    <f:DynamicPage headerExpanded="{/headerExpanded}">
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar id="dateFilterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem name="Name" label="Tarih Aralığı" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                                        <DatePicker />
                                        <DatePicker />
                                    </FlexBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <!-- <fb:FilterGroupItem name="Name" label="{i18n>REQUEST_REGISTRATION_DATE_RANGE}" groupName="Group4" visibleInFilterBar="true">
                                <fb:control>
                                    <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                                        <DatePicker />
                                        <DatePicker />
                                    </FlexBox>
                                </fb:control>
                            </fb:FilterGroupItem> -->
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="DateSearchHelp"
                inset="false"
                items="{
                    path: '/ProductCollection'
                }"
            >
                <columns>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Tarih"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true" width="16rem">
                        <Text text="Açıklama"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                        <Text text="Tam Gün"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                        <Text text="Yarım Gün"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <ObjectIdentifier title="{Name}" text="{ProductId}" />
                            <Text text="{Category}" />
                            <Text text="{SupplierName}" />
                            <Text text="{SupplierName}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
    <beginButton>
        <Button text="{i18n>CANCEL_BUTTON}" type="Reject" icon="sap-icon://cancel" press=".onDateCancelButtonPress"/>
    </beginButton>
</Dialog>
</c:FragmentDefinition>
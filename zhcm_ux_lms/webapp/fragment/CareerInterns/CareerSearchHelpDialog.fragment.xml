<c:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core"
	xmlns:c="sap.ui.core">
	<Dialog title="Sorgulama Kriterleri" state="None" type="Standard" contentWidth="80%" contentHeight="80%" verticalScrolling="false">
		<f:DynamicPage headerExpanded="{careerInternListModel>/isHeaderExpanded}">
			<f:header>
				<f:DynamicPageHeader>
					<f:content>
						<fb:FilterBar id="CareerFilter" persistencyKey="myPersKey" useToolbar="false" search=".onCareerSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
							<fb:filterGroupItems>
								<fb:FilterGroupItem name="Name" label="{i18n>AREA}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Werks' } ] }" selectedKey="{careerInternListModel>/searchCareerParameter/Werks}">
											<core:ListItem key="{Key}" text="{Value}"/>
										</ComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="Category" label="{i18n>UNIT}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Orgeh' } ] }" selectedKey="{careerInternListModel>/searchCareerParameter/Orgeh}">
											<core:ListItem key="{Key}" text="{Value}"/>
										</ComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="SupplierName" label="{i18n>YEAR}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<DatePicker value="{path: 'careerInternListModel>/searchCareerParameter/Tarih', type: 'sap.ui.model.type.Date' , formatOptions: {UTC:true, pattern: 'yyyy'}}"></DatePicker>
									</fb:control>
								</fb:FilterGroupItem>
							</fb:filterGroupItems>
						</fb:FilterBar>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<Table id="careerTable" inset="false" items="{/CareerIntershipSet}" popinLayout="GridSmall" autoPopinMode="true">
					<columns>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>QUOTA_TYPE}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>UNIT}"/>
						</Column>
						<!-- <Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>REGISTRATION_NUMBER}"/>
						</Column> -->
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>OR_VORNA}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>OR_NACHN}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>IBAN_NO}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>UNIVERSITY}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>INTERNSHIP_BRANCH}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>INTERNSHIP_TYPE}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>NO_PAID}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>CLASS}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>START_DATE}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>END_DATE}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>NUMBER_OF_DAYS}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>CALENDAR_DAY}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>INTERNSHIP_NOTE}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>EXPLANATION}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
							<Text text="{i18n>DATE_OF_BIRTH}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>CARD_NUMBER}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>MOBILE_PHONE}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>EMERGENCY_CONTACT}"/>
						</Column>
					</columns>

					<items>
						<ColumnListItem type="Active" press=".onItemCareerSelected">
							<cells>
								<Text text="{Quoty}" />
								<ObjectIdentifier title="{Orgeh}" text="{Orgtx}"/>
								<Text text="{Vorna}" />
								<Text text="{Nachn}" />
								<Text text="{Iban00}" />
								<Text text="{Atext}" />
								<Text text="{Ftext}" />
								<Text text="{Intyp}" />
								<Text text="{Nowap}" />
								<Text text="{Class}" />
								<Text text="{path: 'Begdt', type: 'sap.ui.model.type.Date' , formatOptions: {UTC:true, pattern: 'dd.MM.yyyy'}}" />
								<Text text="{path: 'Findt', type: 'sap.ui.model.type.Date' , formatOptions: {UTC:true, pattern: 'dd.MM.yyyy'}}" />
								<Text text="{Nuoda}" />
								<Text text="{Calda}" />
								<Text text="{Intgr}" />
								<Text text="{Descp}" />
								<Text text="{path: 'Daobr', type: 'sap.ui.model.type.Date' , formatOptions: {UTC:true, pattern: 'dd.MM.yyyy'}}" />					
							    <Text text="{Cardn}" />
								<Text text="{Phonm}" />
								<Text text="{Conem}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>
		</f:DynamicPage>
		<beginButton>
			<Button text="{i18n>CANCEL_BUTTON}" icon="sap-icon://cancel" press=".onCancelSearchCareerDialog" type="Reject" />
		</beginButton>
	</Dialog>
</c:FragmentDefinition>
<c:FragmentDefinition xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:grid="sap.ui.layout.cssgrid">
	<Dialog title="{i18n>GUARANTOR_IDENTITY_INFORMATION}" state="None" type="Standard" contentWidth="80%" contentHeight="80%" verticalScrolling="false">
		<grid:CSSGrid id="grid5" gridTemplateColumns="2fr 2fr" gridTemplateRows="50px 200px 50px" gridGap="1rem">
		<f:Form editable="false" class="sapUiSmallMarginBottom">
		
		<f:layout>
			<f:ResponsiveGridLayout labelSpanXL="12" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false" />
		</f:layout>
			<f:formContainers>
				<f:FormContainer >
					<f:formElements>
						<f:FormElement label="{i18n>ID_NUMBER}">
							<f:fields>
								<Input />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>STUDENT_NAME}">
							<f:fields>
								<Input />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>STUDENT_SURNAME}">
							<f:fields>
								<Input />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>DATE_OF_BIRTH}">
							<f:fields>
								<Input />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>STUDENT_GENDER}">
							<f:fields>
								<Input />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>SERIAL_NUMBER}">
							<f:fields>
								<Input />
							</f:fields>
						</f:FormElement>

					</f:formElements>
				</f:FormContainer>
				<f:FormContainer >
					<f:formElements>
						<f:FormElement label="{i18n>NATIONALITY}">
							<f:fields>
								<Input />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>EXPIRY}">
							<f:fields>
								<Input />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>MOTHER_NAME}">
							<f:fields>
								<Input />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>FATHER_NAME}">
							<f:fields>
								<Input />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>ISSUING_AUTHORITY}">
							<f:fields>
								<Input />
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</grid:CSSGrid>
	<beginButton>
		<Button text="{i18n>CANCEL_BUTTON}" icon="sap-icon://cancel" press=".onCancelGuarantorIdentity" type="Reject" />
	</beginButton>
	</Dialog>
</c:FragmentDefinition>
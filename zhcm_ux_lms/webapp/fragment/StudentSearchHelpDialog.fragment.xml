<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar">
    <Dialog title="{i18n>SCHOLARSHIP_STUDENT_INQUIRY}" state="None" type="Standard" contentWidth="80%" contentHeight="80%">
        <f:DynamicPage headerExpanded="{}">
            <f:header>
                <f:DynamicPageHeader>
                    <f:content>
                        <fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
                            <fb:filterGroupItems>
                                <fb:FilterGroupItem name="StudentNumber" label="{i18n>STUDENT_NUMBER}" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input value="{requestListModel>/searchParameter/Pernr}"/>
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem name="Name" label="{i18n>STUDENT_NAME}" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input value="{requestListModel>/searchParameter/Vorna}" />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem name="Surname" label="{i18n>STUDENT_SURNAME}" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input value="{requestListModel>/searchParameter/Nachn}" />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem name="EmploymentUnit" label="{i18n>UNIT_OF_EMPLOYMENT}" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="employmentUnitInput" />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem name="Country" label="{i18n>STUDENT_COUNTRY}" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <MultiComboBox name="Country" selectionChange=".onSelectionChange" />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem name="MainSchool" label="{i18n>PRINCIPAL_SCHOOL}" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <MultiComboBox name="MainSchool" selectionChange=".onSelectionChange" />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem name="LanguageSchool" label="{i18n>LANGUAGE_SCHOOL}" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <MultiComboBox name="LanguageSchool" selectionChange=".onSelectionChange" />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem name="Active" label="{i18n>STUDENT_ACTIVE}" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <CheckBox id="activeCheckBox" text="Aktif"/>
                                    </fb:control>
                                </fb:FilterGroupItem>

                            </fb:filterGroupItems>
                        </fb:FilterBar>
                        <Button text="Sorgula" press=".onSearchPress" class="sapUiSmallMarginTop" icon="sap-icon://question-mark" type="Emphasized" />
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>

                <Table id="studentTable" inset="false" class="sapUiSmallMarginBottom" items="{/ScholarshipStudentSet}">
                    <columns>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>STUDENT_NUMBER}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>STUDENT_NAME}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>STUDENT_SURNAME}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>UNIT_CODE}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>STUDENT_TYPE}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>UNIT}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>STUDENT_COUNTRY}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>PRINCIPAL_SCHOOL}"/>
                        </Column>

                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{Pernr}"/>
                                <Text text="{Vorna}"/>
                                <Text text="{Nachn}"/>
                                <Text text="{BirimKodu}"/>
                                <Text text="{Türü}"/>
                                <Text text="{Birimi}"/>
                                <Text text="{Ülke}"/>
                                <Text text="{EsasOkulu}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </f:content>
        </f:DynamicPage>
    </Dialog>
</core:FragmentDefinition>

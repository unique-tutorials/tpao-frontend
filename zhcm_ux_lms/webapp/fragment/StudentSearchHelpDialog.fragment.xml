<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar">
    <Dialog title="Burslu Öğrenci Sorgu" state="None" type="Standard" contentWidth="80%" contentHeight="80%">
        <f:DynamicPage headerExpanded="{}">
            <f:header>
                <f:DynamicPageHeader>
                    <f:content>
                        <fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
                            <fb:filterGroupItems>
                                <fb:FilterGroupItem name="StudentNumber" label="Öğrenci No" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input value="{requestListModel>/searchParameter/Pernr}"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                
                                <fb:FilterGroupItem name="Name" label="Adı" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input value="{requestListModel>/searchParameter/Vorna}" />
                                    </fb:control>
                                </fb:FilterGroupItem>
                                
                                <fb:FilterGroupItem name="Surname" label="Soyadı" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input value="{requestListModel>/searchParameter/Nachn}" />
                                    </fb:control>
                                </fb:FilterGroupItem>

                            </fb:filterGroupItems>
                        </fb:FilterBar>
                        <Button text="Sorgula" press=".onSearchPress" class="sapUiSmallMarginTop"  icon="sap-icon://question-mark" type="Emphasized" />
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
              
                <Table id="studentTable" inset="false" class="sapUiSmallMarginBottom" items="{/ScholarshipStudentSet}" >
                    <columns>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="Öğrenci No"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="Adı "/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="Soyadı"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{Pernr}"/>
                                <Text text="{Vorna}"/>
                                <Text text="{Nachn}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </f:content>
        </f:DynamicPage>
    </Dialog>
</core:FragmentDefinition>

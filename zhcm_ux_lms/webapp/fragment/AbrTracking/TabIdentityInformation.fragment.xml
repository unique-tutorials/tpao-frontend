<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <f:Form editable="true">
        <f:title>
            <core:Title text="{i18n>SCHOLARSHIP_STUDENT_IDENTITY_INFORMATION}" />
        </f:title>
        <f:layout>
            <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false" />
        </f:layout>
        <f:formContainers>
            <f:FormContainer >
                <f:formElements>
                    <f:FormElement label="{i18n>SERIAL_NUMBER}">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/Serno}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>ID_NUMBER}">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/Merni}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>MOTHER_NAME}">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/Motnm}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>FATHER_NAME}">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/Fatnm}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="Doğum Yeri">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/Brtpl}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>DATE_OF_BIRTH}">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/Brtdt}" />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
            <f:FormContainer >
                <f:formElements>
                    <f:FormElement label="Medeni Hali">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/Mrtst}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="Dini">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/Rlign}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="Kan Grubu">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/Bldty}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="İl">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/City}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="İlçe">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/Distr}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="Veriliş Tarihi">
                        <f:fields>
                            <Input value="{requestListModel>/identityEmployee/Issdt}" />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
</c:FragmentDefinition>
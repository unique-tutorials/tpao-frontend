<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <f:Form editable="true">
        <f:title>
            <core:Title text="{i18n>SCHOLARSHIP_STUDENT_IDENTITY_INFORMATION}" />
        </f:title>
        <f:layout>
            <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false" />
        </f:layout>
        <f:formContainers>
            <f:FormContainer >
                <f:formElements>
                    <f:FormElement label="{i18n>ID_NUMBER}">
                        <f:fields>
                            <Input />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>STUDENT_NAME}">
                        <f:fields>
                            <Input />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>STUDENT_SURNAME}">
                        <f:fields>
                            <Input />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>DATE_OF_BIRTH}">
                        <f:fields>
                            <Input />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>STUDENT_GENDER}">
                        <f:fields>
                            <Input />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>SERIAL_NUMBER}">
                        <f:fields>
                            <Input />
                        </f:fields>
                    </f:FormElement>

                </f:formElements>
            </f:FormContainer>
            <f:FormContainer >
                <f:formElements>
                    <f:FormElement label="{i18n>NATIONALITY}">
                        <f:fields>
                            <Input />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>EXPIRY}">
                        <f:fields>
                            <Input />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>MOTHER_NAME}">
                        <f:fields>
                            <Input />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>FATHER_NAME}">
                        <f:fields>
                            <Input />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>ISSUING_AUTHORITY}">
                        <f:fields>
                            <Input />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
</c:FragmentDefinition>
<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>GUARANTOR_CONTACT_INFORMATION}" state="None" type="Standard" contentWidth="80%" contentHeight="80%" verticalScrolling="false">
        <Table busy="{requestListModel>/tableBusy}" items="{requestListModel>/guarantorContactList}" width="auto" noDataText="{i18n>NO_DATA}" busyIndicatorDelay="{requestListModel>/tableBusyDelay}" growing="true" growingScrollToLoad="true" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" class="sapUiSmallMarginBottom">
            <headerToolbar>
                <OverflowToolbar>
                    <content>
                        <Title text="{i18n>ADDRESS_INFORMATION}"/>
                        <ToolbarSpacer />
                        <Button
                            icon="sap-icon://edit"
                            press="onEditPress"
                        />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="{i18n>ADDRESS_TYPE}"/>
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="{i18n>FROM_MERNIS}"/>
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="{i18n>ADDRESS}"/>
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="{i18n>POSTAL_CODE}"/>
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="{i18n>OR_LAND1}"/>
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="{i18n>PROVINCE}"/>
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="{i18n>DISTRICT}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem >
                    <cells>
                        <HBox alignItems="Start">
                            <Input
                                value="{requestListModel>Adtyp}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityEditable} }"
                            />
                            <Text
                                text="{requestListModel>Adtyp}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityDisplay} }"
                            />
                        </HBox>
                        <HBox alignItems="Start">
                            <Input
                                value="{requestListModel>Mernis}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityEditable} }"
                            />
                            <Text
                                text="{requestListModel>Mernis}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityDisplay} }"
                            />
                        </HBox>
                        <HBox alignItems="Start">
                            <Input
                                value="{requestListModel>Stras}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityEditable} }"
                            />
                            <Text
                                text="{requestListModel>Stras}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityDisplay} }"
                            />
                        </HBox>
                        <HBox alignItems="Start">
                            <Input
                                value="{requestListModel>Pstlz}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityEditable} }"
                            />
                            <Text
                                text="{requestListModel>Pstlz}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityDisplay} }"
                            />
                        </HBox>
                        <HBox alignItems="Start">
                            <Input
                                value="{requestListModel>Conry}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityEditable} }"
                            />
                            <Text
                                text="{requestListModel>Conry}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityDisplay} }"
                            />
                        </HBox>
                        <HBox alignItems="Start">
                            <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'City' } ] }" selectedKey="{requestListModel>City}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityEditable} }">
                                <core:ListItem key="{Key}" text="{Value}"/>
                            </ComboBox>
                            <Text
                                text="{requestListModel>Bezei}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityDisplay} }"
                            />
                        </HBox>
                        <HBox alignItems="Start">
                            <Input
                                value="{requestListModel>Distx}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityEditable} }"
                            />
                            <Text
                                text="{requestListModel>Distx}"
                                visible="{= ${requestListModel>/suggestionActionData/priorityDisplay} }"
                            />
                        </HBox>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <l:VerticalLayout width="100%" class="gridWrapper">
            <l:Grid containerQuery="true" class="smod-background" defaultSpan="XL6 L6 M6 S12">
                <Table busy="{requestListModel>/tableBusy}" items="{requestListModel>/guarantorContactList}" noDataText="{i18n>NO_DATA}" busyIndicatorDelay="{requestListModel>/tableBusyDelay}" growing="true" growingScrollToLoad="true" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" class="sapUiSmallMarginBottom">
                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <Title text="{i18n>PHONE_INFORMATION}"/>
                                <ToolbarSpacer />
                                <Button
                                    icon="sap-icon://edit"
                                    press="onEditPress"
                                />
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="{i18n>PHONE_TYPE}"/>
                        </Column>
                        <Column >
                            <Text text="{i18n>PHONE_NUMBER}"/>
                        </Column>
                        <Column >
                            <Text text="{i18n>DEFAULT}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem >
                            <cells>
                                <HBox alignItems="Start">
                                    <Input
                                        value="{requestListModel>Photy}"
                                        visible="{= ${requestListModel>/suggestionActionData/priorityEditable} }"
                                    />
                                    <Text
                                        text="{requestListModel>Photy}"
                                        visible="{= ${requestListModel>/suggestionActionData/priorityDisplay} }"
                                    />
                                </HBox>
                                <HBox alignItems="Start">
                                    <Input
                                        value="{requestListModel>Phonm}"
                                        visible="{= ${requestListModel>/suggestionActionData/priorityEditable} }"
                                    />
                                    <Text
                                        text="{requestListModel>Phonm}"
                                        visible="{= ${requestListModel>/suggestionActionData/priorityDisplay} }"
                                    />
                                </HBox>
                                <CheckBox selected="{requestListModel>Pfult}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <Table busy="{requestListModel>/tableBusy}" items="{requestListModel>/guarantorContactList}" noDataText="{i18n>NO_DATA}" busyIndicatorDelay="{requestListModel>/tableBusyDelay}" growing="true" growingScrollToLoad="true" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" class="sapUiSmallMarginBottom">
                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <Title text="{i18n>E_MAIL_INFORMATION}"/>
                                <ToolbarSpacer />
                                <Button
                                    icon="sap-icon://edit"
                                    press="onEditPress"
                                />
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="{i18n>EMAIL_ADDRESS}"/>
                        </Column>
                        <Column >
                            <Text text="{i18n>DEFAULT}"/>
                        </Column>

                    </columns>
                    <items>
                        <ColumnListItem >
                            <cells>
                                    <HBox alignItems="Start">
                                        <Input
                                            value="{requestListModel>Email}"
                                            visible="{= ${requestListModel>/suggestionActionData/priorityEditable} }"
                                        />
                                        <Text
                                            text="{requestListModel>Email}"
                                            visible="{= ${requestListModel>/suggestionActionData/priorityDisplay} }"
                                        />
                                    </HBox>
                                <CheckBox selected="{requestListModel>Mfult}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </l:Grid>
        </l:VerticalLayout>
        <beginButton>
            <Button text="{i18n>CANCEL_BUTTON}" icon="sap-icon://cancel" press=".onCancelGuarantorContact" type="Reject" />
        </beginButton>
        <endButton>
            <Button text="{i18n>SAVE_ACTION}" icon="sap-icon://cancel" press=".onSaveGuarantorContact" type="Accept" />
        </endButton>
    </Dialog>
</c:FragmentDefinition>
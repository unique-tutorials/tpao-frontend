<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="Genel Harcama Faturası" contentWidth="70%" contentHeight="70%" verticalScrolling="false">
        <VBox class="sapUiSmallMargin">
            <f:Form editable="true">
                <f:title>
                    <core:Title text="Fatura Bilgileri" />
                </f:title>
                <f:layout>
                    <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Fatura No">
                                <f:fields>
                                    <Input value="{requestListModel>/expendInfoDialogRequest/Payno}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Tarih">
                                <f:fields>
                                    <DatePicker value="{path: 'requestListModel>/expendInfoDialogRequest/Paydt', 
                                        type: 'sap.ui.model.type.Date', 
                                        formatOptions: {UTC:true , pattern: 'dd/MM/yyyy'}}">
                                    </DatePicker>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Son Ödeme Tarihi">
                                <f:fields>
                                    <DatePicker value="{path: 'requestListModel>/expendInfoDialogRequest/Payde', 
                                        type: 'sap.ui.model.type.Date', 
                                        formatOptions: {UTC:true , pattern: 'dd/MM/yyyy'}}">
                                    </DatePicker>
                                </f:fields>
                            </f:FormElement>
                            <!-- <f:FormElement label="Bütçe Kodu">
                                <f:fields>
                                    <Input value="{requestListModel>/expendInfoDialogRequest/Paynoa}" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="onShowUnitExpendSearchHelp"/>
                                </f:fields>
                            </f:FormElement> -->
                            <f:FormElement label="Masraf Merkezi">
                                <f:fields>
                                    <Input value="{requestListModel>/expendInfoDialogRequest/Kostl}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Faturanın Konusu">
                                <f:fields>
                                    <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Invsu' } ] }" selectedKey="{requestListModel>/expendInfoDialogRequest/Invsu}">
                                        <core:ListItem key="{Key}" text="{Value}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Ödeme Türü">
                                <f:fields>
                                    <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Paytp' } ] }" selectedKey="{requestListModel>/expendInfoDialogRequest/Paytp}">
                                        <core:ListItem key="{Key}" text="{Value}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Para birimi">
                                <f:fields>
                                    <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Waers' } ] }" selectedKey="{requestListModel>/expendInfoDialogRequest/Waers}">
                                        <core:ListItem key="{Key}" text="{Value}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Hesap No">
                                <f:fields>
                                    <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Whiac' } ] }" selectedKey="{requestListModel>/expendInfoDialogRequest/Whiac}">
                                        <core:ListItem key="{Key}" text="{Value}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Açıklama">
                                <f:fields>
                                    <Input value="{requestListModel>/expendInfoDialogRequest/Descp}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Fatura Toplamı">
                                <f:fields>
                                    <Input value="{requestListModel>/expendInfoDialogRequest/Payam}" />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        <beginButton>
            <Button text="{i18n>CANCEL_BUTTON}" icon="sap-icon://cancel" press=".onExpendCancelButtonPress" type="Reject" />
        </beginButton>
        <endButton>
            <Button text="{i18n>SAVE_ACTION}" icon="sap-icon://save" press=".onSaveExpendDialogButtonPress" type="Accept" />
        </endButton>
    </Dialog>
</c:FragmentDefinition>
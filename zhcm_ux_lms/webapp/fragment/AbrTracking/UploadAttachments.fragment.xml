<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:tnt="sap.tnt">
    <Dialog title="{i18n>UPLOAD_ATTACHMENT_DIALOG}" showHeader="true" stretch="{device>/system/phone}" contentWidth="600px" afterClose="onUpdloadAttAfterClose">
        <content>
            <f:Form editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout singleContainerFullSize="true" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement>
                                <f:fields>
                                    <HBox justifyContent="Inherit">
                                        <u:FileUploader id="idAttachmentFileUploader" name="FileUploader" uploadUrl="" width="550px" uploadComplete="onAttachmentUploadComplete" change="onAttachmentFileChange" typeMissmatch="onFileTypeMissmatch" style="Emphasized" icon="sap-icon://attachment" fileType="pdf" maximumFileSize="5" fileSizeExceed="onFileSizeExceed" placeholder="{i18n>LABEL_UPLOAD_PLACEHOLDER}" sendXHR="true" useMultipart="false" />
                                    </HBox>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>
        <buttons>
            <Button text="{i18n>LABEL_CANCEL}" icon="sap-icon://sys-cancel-2" type="Reject" press="onCloseUploadDialog" />
            <Button text="{i18n>LABEL_UPLOAD_FILE}" icon="sap-icon://upload-to-cloud" type="Accept" press="onAttachmentUploadPress" />
        </buttons>
    </Dialog>
</c:FragmentDefinition>
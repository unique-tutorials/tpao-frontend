<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core">

    <Table mode="SingleSelect" busy="{otherRequestListModel>/tableBusy}" width="auto" items="{requestListModel>/guarantorList}" noDataText="{i18n>NO_DATA}" busyIndicatorDelay="{otherRequestListModel>/tableBusyDelay}" growing="true" growingScrollToLoad="true" selectionChange=".onTableSelectionChange" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="{i18n>GUARANTORS}" level="H2"/>
                    <ToolbarSpacer />
                    <Button text="{i18n>ADD_ACTION}" press=".onAddGuarantor" type="Accept" icon="sap-icon://create" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="{i18n>SEQ_NO}"/>
            </Column>
            <Column>
                <Text text="{i18n>OR_VORNA}"/>
            </Column>
            <Column>
                <Text text="{i18n>OR_NACHN}"/>
            </Column>
            <Column>
                <Text text="{i18n>ACTION_LIST}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{requestListModel>Sirno}"/>
                    <Text text="{requestListModel>Vorna}"/>
                    <Text text="{requestListModel>Nachn}"/>
                    <Button icon="sap-icon://menu" type="Accept" press=".onGuarantorActions" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</c:FragmentDefinition>

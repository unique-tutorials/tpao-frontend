<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core">

    <Table busy="{otherRequestListModel>/tableBusy}" width="auto" items="{requestListModel>/guarantorList}" noDataText="{i18n>NO_DATA}" busyIndicatorDelay="{otherRequestListModel>/tableBusyDelay}" growing="true" growingScrollToLoad="true" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders">
        <headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="{i18n>GUARANTORS}" level="H2"/>
                    <ToolbarSpacer />
                    <Button text="Kefil Bilgisi Sorgula" press=".onGuarantorButtonPress" type="Neutral" />
                    <Button text="Kefil Bilgisi Ekle" press=".onAddGuarantor" type="Emphasized" icon="sap-icon://add" />
                 </content>
			</OverflowToolbar>
		</headerToolbar>
        <columns>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="{i18n>SERIAL_NO}"/>
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="{i18n>OR_VORNA}"/>
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="{i18n>OR_NACHN}"/>
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="{i18n>ACTION_LIST}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Navigation">
                <cells>
                    <Text text="{requestListModel>Sirno}"/>
                    <Text text="{requestListModel>Vorna}"/>
                    <Text text="{requestListModel>Nachn}"/>
                        <MenuButton icon="sap-icon://settings"  type="Accept">
                            <menu>
                                <Menu>
                                    <MenuItem
                                        text="Kefil Bilgileri"
                                        icon="sap-icon://account"
                                        press="openGuarantorDialog"
                                    />
                                    <MenuItem
                                        text="İletişim Bilgileri"
                                        icon="sap-icon://call"
                                        press="openGuarantorContactDialog"
                                    />
                                    <MenuItem
                                        text="Kimlik Bilgileri"
                                        icon="sap-icon://business-card"
                                        press="openGuarantorIdentityDialog"
                                    />
                                </Menu>
                            </menu>
                        </MenuButton>   
                </cells>
            </ColumnListItem>
        </items>
    </Table>

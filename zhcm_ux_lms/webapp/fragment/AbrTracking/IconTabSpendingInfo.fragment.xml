<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <Table busy="{requestListModel>/tableBusy}" width="auto" items="{requestListModel>/expendInfoList}" noDataText="{i18n>NO_DATA}" growing="true" growingScrollToLoad="true" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="{i18n>GENERAL_EXPENDITURE_INFORMATION}" level="H2"/>
                    <ToolbarSpacer />
                    <Button text="{i18n>ADD_ACTION}" press=".onExpendInfoAddDialog" type="Accept" icon="sap-icon://create" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="{i18n>INVOICE_NUMBER}"/>
            </Column>
            <Column>
                <Text text="{i18n>SELLER_NUMBER}"/>
            </Column>
            <Column width="12rem">
                <Text text="{i18n>PAYMENT_TYPE}"/>
            </Column>
            <Column>
                <Text text="{i18n>INVOICE_DATE}"/>
            </Column>
            <Column>
                <Text text="{i18n>PAY_DATE}"/>
            </Column>
            <Column>
                <Text text="{i18n>INVOICE_AMOUNT}"/>
            </Column>
            <Column>
                <Text text="{i18n>EXPLANATION} "/>
            </Column>
          
            <Column>
                <Text text="{i18n>APPRO_STATUS}"/>
            </Column>
            <Column>
                <Text text="{i18n>INVOICE_DOCUMENT}"/>
            </Column>
            <Column>
                <Text text="{i18n>TO_SENT}"/>
            </Column>
            <Column>
                <Text text="{i18n>PAID}"/>
            </Column>
            <Column>
                <Text text="{i18n>ACTION_LIST}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{requestListModel>Payno}"/>
                    <Text text="{requestListModel>Parno}"/>
                    <Text text="{requestListModel>Paytpt}"/>
                    <Text text="{
                        path: 'requestListModel>Paydt', 
                        type: 'sap.ui.model.type.Date', 
                        formatOptions: { 
                            pattern: 'dd.MM.yyyy', 
                            UTC: true 
                        }
                    }"/>
                    <Text text="{
                        path: 'requestListModel>Augdt', 
                        type: 'sap.ui.model.type.Date', 
                        formatOptions: { 
                            pattern: 'dd.MM.yyyy', 
                            UTC: true 
                        }
                    }"/>
                    <Text text="{requestListModel>Payam}"/>
                    <Text text="{requestListModel>Descp}"/>
                    <Text text="{requestListModel>Appstx}"/>
                    <Link press=".onAttachDownload" text="{requestListModel>FileName}" />
                    <CheckBox selected="{requestListModel>Sent}" enabled="false"/>
                    <CheckBox selected="{requestListModel>Paid}" enabled="false" />
                    <Button icon="sap-icon://menu" type="Accept" press=".onExpendActions" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</c:FragmentDefinition>
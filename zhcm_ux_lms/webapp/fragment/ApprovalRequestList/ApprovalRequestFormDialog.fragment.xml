<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    
    <Dialog 
        title="{i18n>NEW_TRAINING_REQUEST_CREATE}" 
        state="None" 
        type="Standard" 
        contentWidth="70%" 
        contentHeight="70%" 
        draggable="true">
        <VBox>
            <f:Form editable="true" class="overTimeRequestCreateDisplayPage">
                <f:layout>
                    <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="3"
                        emptySpanL="3"
                        emptySpanM="3"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                    />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>UNDERGRADUATE_GRADUATION_AREA}">
                                <f:fields>
                                    <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Madef' } ] }" selectedKey="{approvalRequestListModel>/currentRequest/Madef}"  enabled="{approvalRequestListModel>/aplicationSetting/enabled}">
                                        <core:ListItem key="{Key}" text="{Value}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>MASTER_DEGREE_FIELD_TR}">
                                <f:fields>
                                    <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Grfst' } ] }" 
                                    selectedKey="{approvalRequestListModel>/currentRequest/Grfst}"  
                                    enabled="{approvalRequestListModel>/aplicationSetting/enabled}">
                                        <core:ListItem key="{Key}" text="{Value}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>MASTER_DEGREE_FIELD_EN}">
                                <f:fields>
                                    <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Grfsi' } ] }" 
                                    selectedKey="{approvalRequestListModel>/currentRequest/Grfsi}"  
                                    enabled="{approvalRequestListModel>/aplicationSetting/enabled}">
                                        <core:ListItem key="{Key}" text="{Value}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>MASTER_DEGREE_SUBJECT_TR}">
                                <f:fields>
                                    <TextArea rows="4" value="{approvalRequestListModel>/currentRequest/Ylskt}" 
                                        enabled="{approvalRequestListModel>/aplicationSetting/enabled}" required="true" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>MASTER_DEGREE_SUBJECT_EN}">
                                <f:fields>
                                    <TextArea rows="4" value="{approvalRequestListModel>/currentRequest/Ylski}" 
                                        enabled="{approvalRequestListModel>/aplicationSetting/enabled}" required="true" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>NUMBER_OF_QUOTAS}">
                                <f:fields>
                                    <Input value="{approvalRequestListModel>/currentRequest/Kntjs}"
                                         enabled="{approvalRequestListModel>/aplicationSetting/enabled}" required="true" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>UNIT_ON_RETURN}">
                                <f:fields>
                                    <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Orgeh' } ] }" 
                                    selectedKey="{approvalRequestListModel>/currentRequest/Orgeh}" 
                                     enabled="{approvalRequestListModel>/aplicationSetting/enabled}">
                                        <core:ListItem key="{Key}" text="{Value}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>REASON_FOR_SCHOLARSHIP}">
                                <f:fields>
                                    <TextArea rows="4" value="{approvalRequestListModel>/currentRequest/Okugr}" 
                                        enabled="{approvalRequestListModel>/aplicationSetting/enabled}" required="true" />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                 <Button
            text="{i18n>CANCEL_ACTION}"
            type="Neutral"
            icon="sap-icon://cancel"
            press="onCancel"
        />
        
        <Button id="idFormActionsButton" visible="{= ${approvalRequestListModel>/currentRequest/Lmssf} === 'ALL' ? true : false}" busyIndicatorDelay="0" icon="sap-icon://menu2" type="Emphasized" tooltip="{i18n>ACTION_LIST}"
                press="onOpenFormActions" text="{i18n>ACTION_LIST}" />
                
            
            </OverflowToolbar>
        </footer>
    </Dialog>
</c:FragmentDefinition>
<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <f:Form editable="true">
        <f:title>
            <core:Title text="Teknik Değerlendirme" />
        </f:title>
        <f:layout>
            <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
        </f:layout>
        <f:formContainers>
            <f:FormContainer>
                <f:formElements>
                    <f:FormElement label="{i18n>Q_UNIT}">
                        <f:fields>
                            <Input value="{SupplierName}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>UNIT}">
                        <f:fields>
                            <Input value="{Street}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>STUDENT_ENAME}">
                        <f:fields>
                            <Input value="{ZIPCode}" />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
            <f:FormContainer>
                <f:formElements>
                    <f:FormElement label="{i18n>EVALUATION_DATE}">
                        <f:fields>
                            <Input value="{ZIPCode}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>TECHNICAL_ENAME}">
                        <f:fields>
                            <Input value="{Street}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>REGISTRATION_NUMBER}">
                        <f:fields>
                            <Input value="{ZIPCode}" />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
    <VBox class="sapUiSmallMarginTopBottom">
        <List headerText="Bilgi Seviyesi Açıklaması" headerLevel="H2" items="{internStudentListModel>/ratingScaleList}">
            <infoToolbar>
                <OverflowToolbar active="true">
                    <Label text="Dolduracağınız bu anketin amacı Biz Bize Kariyer Programı Kapsamında gelişimine destek verdiğiniz
                    stajerlerinizi değerlendirmek ve Biz Bize Kariyer programını geliştir olup, dolduracağınız anket bizim için
                    önem arz etmektedir." />
                </OverflowToolbar>
            </infoToolbar>
            <StandardListItem title="{internStudentListModel>titles}" description="{internStudentListModel>desc}" />
        </List>
    </VBox>
    <Table inset="false" items="{internStudentListModel>/evaluationQuestionsList}" growing="true" growingScrollToLoad="true" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="Products" level="H2"/>
                    <ToolbarSpacer />
                    <Button icon="sap-icon://edit" press="onEditPress" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column width="8rem">
                <Text text="Soru Sıra No" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true" >
                <Text text="Değerlendirme Soruları" />
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true" hAlign="End" width="12rem"> 
                <Text text="Puan" />
            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <Text text="{internStudentListModel>numb}"/>
                    <Text text="{internStudentListModel>Ques}" />
                    <HBox alignItems="End" justifyContent="End">
                        <Input 
                            value="{internStudentListModel>Point}"
                            visible="{= ${internStudentListModel>/suggestionActionData/priorityEditable} }"
                        />
                        <Text
                            text="{internStudentListModel>Point}"
                            visible="{= ${internStudentListModel>/suggestionActionData/priorityDisplay} }"
                        />
                    </HBox>
                    <!-- <Text text="{internStudentListModel>Point}" /> -->
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</c:FragmentDefinition>
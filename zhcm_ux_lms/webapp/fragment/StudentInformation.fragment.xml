<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
        <f:Form editable="false">
            <f:title>
                <core:Title text="{i18n>STUDENT_SEARCH}" />
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>STUDENT_NUMBER}">
                            <f:fields>
                                <Input value="{path: 'requestListModel>/newRotationRequest/Pernr', formatter: '.formatter.convertZeroObjectNumber'}" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="onShowPersonSearchHelp"/>
                                <Button text="{i18n>QUESTION_BUTTON}" type="Emphasized" />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
        <f:Form editable="true">
            <f:title>
                <core:Title text="{i18n>STUDENT_INFORMATION}"/>
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>STUDENT_NUMBER}">
                            <f:fields>
                                <Input class="textClass" value="{requestListModel>/selectedEmployee/Pernr}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>STUDENT_TYPE}">
                            <f:fields>
                                <ComboBox selectedKey="{requestListModel>/selectedEmployee/Type}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>STUDENT_NAME}">
                            <f:fields>
                                <Input class="textClass" value="{requestListModel>/selectedEmployee/Vorna}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>STUDENT_SURNAME}">
                            <f:fields>
                                <Input class="textClass" value="{requestListModel>/selectedEmployee/Nachn}" />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>STUDENT_GENDER}">
                            <f:fields>
                                <ComboBox selectedKey="{requestListModel>/selectedEmployee/Gesch}" />
                                <Input enabled="false"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>UNIT_CODE}">
                            <f:fields>
                                <Input valueHelpOnly="true" value="{requestListModel>/selectedEmployee/Unicd}" showValueHelp="true" />
                                <Input enabled="false"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>COST_CENTER}">
                            <f:fields>
                                <Input valueHelpOnly="true" value="{requestListModel>/selectedEmployee/Cstcn}" showValueHelp="true" />
                                <Input enabled="false" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>BUDGET_CODE}">
                            <f:fields>
                                <Input valueHelpOnly="true" value="{requestListModel>/selectedEmployee/Bdcde}" showValueHelp="true" />
                                <Input enabled="false"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>STUDENT_ACTIVE}">
                            <f:fields>
                                <CheckBox />
                                <ToolbarSpacer/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
</c:FragmentDefinition>
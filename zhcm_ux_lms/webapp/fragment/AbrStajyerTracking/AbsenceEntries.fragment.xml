    <HBox >
    <ToolbarSpacer />
    </HBox>
    <Table
        inset="false"
        items="{requestStajyerListModel>/absenceList}"
        class="sapUiSmallMarginTopBottom"
        growing="true"
        growingScrollToLoad="true"
        sticky="HeaderToolbar,InfoToolbar,ColumnHeaders"
    >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <DateRangeSelection
                        dateValue="{requestStajyerListModel>/absenceFilter/begda}"
                        secondDateValue="{requestStajyerListModel>/absenceFilter/endda}"
                        width="13rem"
                        class="DRS1"
                        change="handleChange"
                    />
                    <Button text="{i18n>QUESTION_BUTTON}" type="Emphasized" press=".onSearchDateStudentPress" />
                    <ToolbarSpacer />
                     <Button text="{i18n>CREATE_ABSENCE}" icon="sap-icon://create" type="Accept" press=".onCreateLeaveRequest" />
                    <!-- <Title text="{i18n>ABSENCE_LOGIN_INFORMATION}" level="H2"/> -->
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
        <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>ABSENCE_TYPE}" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>DATE}" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>NON_COMING_EXPLANATION}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <Text text="{requestStajyerListModel>Subtx}" />
                    <Text text="{path: 'requestStajyerListModel>Histo', type: 'sap.ui.model.type.Date' , formatOptions: {UTC:true, pattern: 'dd.MM.yyyy'}}" />
                    <Text text="{requestStajyerListModel>Exrea}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</c:FragmentDefinition>

<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <f:Form editable="true">
        <f:title>
            <core:Title text="{i18n>INTERN_SEARCH}" />
        </f:title>
        <f:layout>
            <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
        </f:layout>
        <f:formContainers>
            <f:FormContainer>
                <f:formElements>
                    <f:FormElement label="{i18n>INTERN_NUMBER}">
                        <f:fields>
                            <Input id="idStajyerInput" value="{ parts: [{path: 'requestStajyerListModel>/newNumberStajyerRequest/Pernr'},{path: 'requestStajyerListModel>/newNumberStajyerRequest/Ename'}] , formatter: '.formatter.convertZeroObjectNumber'}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest=".onShowStajyerSearchHelp"/>
                            <Button text="{i18n>QUESTION_BUTTON}" type="Emphasized" press=".onSearchStajyerPress"/>
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
    <VBox class="sapUiSmallMarginTop">
        <f:Form id="StajyerForm" editable="true">
            <f:title>
                <core:Title text="{i18n>INTERN_INFORMATION}" />
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>OR_VORNA}">
                            <f:fields>
                                <Input value="{requestStajyerListModel>/SelectedStajyer/Vorna}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>OR_NACHN}">
                            <f:fields>
                                <Input value="{requestStajyerListModel>/SelectedStajyer/Nachn}" />
                            </f:fields>
                        </f:FormElement>
                        <!-- <f:FormElement label="{i18n>REGISTRATION_NUMBER}">
                            <f:fields>
                                <Input value="{requestStajyerListModel>/SelectedStajyer/Orgehx}" />
                            </f:fields>
                        </f:FormElement> -->
                        <f:FormElement label="{i18n>UNIT}">
                            <f:fields>
                                <Input value="{requestStajyerListModel>/SelectedStajyer/Orgeh}" valueHelpOnly="true" showValueHelp="true" valueHelpRequest=".onShowUnitStajyerSearchHelp" enabled="false" />
                                <Input value="{requestStajyerListModel>/SelectedStajyer/Orgtx}" enabled="false" />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
            <f:FormContainer>
                <f:formElements>
                    <f:FormElement label="{i18n>QUOTA_TYPE}">
                        <f:fields>
                            <!-- <ComboBox items="{ path:'/ValueHelpSet' , filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Quotx' } ] }" selectedKey="{requestStajyerListModel>/SelectedStajyer/Quotx}">
                                <core:ListItem key="{Key}" text="{Value}"/>
                            </ComboBox> -->
                            <Input value="{requestStajyerListModel>/SelectedStajyer/Quotx}" />
                            <!-- <Select forceSelection="false" selectedKey="{requestStajyerListModel>/SelectedStajyer/Quotx}" width="100%" items="{  
                        path:'/ValueHelpSet',
                        filters : [
                            { path : 'Id', operator : 'EQ', value1 : 'Quoty'}
                        ]
                    }">
                                <core:Item key="{Key}" text="{Value}"/>
                            </Select> -->
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>ADDRESS}">
                        <f:fields>
                            <Input value="{requestStajyerListModel>/SelectedStajyer/Adres}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>STUDENT_GENDER}">
                        <f:fields>
                            <Text class="textClass" text="{
                                path: 'requestStajyerListModel>/SelectedStajyer/Gesch',
                                formatter: '.genderFormatter'
                            }" />
                                <Input enabled="false" />
                        </f:fields>
                    </f:FormElement>
                     <f:FormElement label="{i18n>STUDENT_PERSK}">
                        <f:fields>
                            <Input enabled="false" value="{requestStajyerListModel>/SelectedStajyer/Ptext}" />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:Form>
    </VBox>
</c:FragmentDefinition>
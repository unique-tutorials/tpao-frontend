<mvc:View controllerName="zhcm_ux_lms_abr.controller.TrplsApp"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core">

    <Page showFooter="true" showHeader="true" floatingFooter="true" showNavButton="true" navButtonPress="onNavBack" title="Burslu Öğrenci Seyahat Rezarvasyon Talebi">
        <VBox class="sapUiSmallMargin">
            <f:Form editable="true">
                <f:title>
                    <core:Title text="{i18n>RESERVATION_SEARCH}" />
                </f:title>
                <f:layout>
                    <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>RESERVATION_REQUEST_NUMBER}">
                                <f:fields>
                                    <Input id="idInput" value="{ parts: [{path: 'trplsRequestListModel>/newNumberReserRequest/Rezno'},{path: 'trplsRequestListModel>/newNumberReserRequest/Ename'}] , formatter: '.formatter.convertZeroObjectNumber'}"   valueHelpOnly="true" showValueHelp="true" valueHelpRequest=".onShowReservationSearchHelp"/>
                                    <Button text="{i18n>QUESTION_BUTTON}" type="Emphasized" press=".onSearchReservationPress"/>
                                </f:fields>
                            </f:FormElement>
                            <!-- <f:FormElement label="{i18n>STUDENT_NUMBER}">
                                <f:fields>
                                    <Input id="idInput" value="{ parts: [{path: 'requestListModel>/newNumberRequest/Pernr'},{path: 'requestListModel>/newNumberRequest/Ename'}] , formatter: '.formatter.convertZeroObjectNumber'}" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="onShowPersonSearchHelp"/>
                                    <Button text="{i18n>QUESTION_BUTTON}" type="Emphasized" press=".onSearchStudentPress"/>
                                </f:fields>
                            </f:FormElement> -->
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        <VBox class="sapUiSmallMargin">
            <f:Form id="FormDisplay354" editable="true">
                <f:title>
                    <core:Title text="{i18n>RESERVATION_INFORMATION}" />
                </f:title>
                <f:layout>
                    <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>REQUEST_NUMBER}">
                                <f:fields>
                                    <Input value="{trplsRequestListModel>/reservationEmployee/Rezno}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>SCHOLARSHIP_STUDENT_NUMBER}">
                                <f:fields>
                                    <Input value="{trplsRequestListModel>/reservationEmployee/Pernr}" valueHelpOnly="true" showValueHelp="true" valueHelpRequest=".onShowReservationSearchHelp" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Öğrenci Adı">
                                <f:fields>
                                    <Input value="{trplsRequestListModel>/reservationEmployee/Vorna}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Öğrenci Soyadı">
                                <f:fields>
                                    <Input value="{trplsRequestListModel>/reservationEmployee/Nachn}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Gidiş Tarihi">
                                <f:fields>
                                    <DatePicker value="{path:'trplsRequestListModel>/reservationEmployee/Depda', 
                                        type: 'sap.ui.model.type.Date', 
                                        formatOptions: {UTC:true , pattern: 'dd.MM.yyyy'}}">
                                    </DatePicker>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>RETURN_DATE}">
                                <f:fields>
                                    <DatePicker value="{path:'trplsRequestListModel>/reservationEmployee/Retda', 
                                        type: 'sap.ui.model.type.Date', 
                                        formatOptions: {UTC:true , pattern: 'dd.MM.yyyy'}}">
                                    </DatePicker>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>OR_LAND1}">
                                <f:fields>
                                    <ComboBox value="{trplsRequestListModel>/reservationEmployee/Conry}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>STATE}">
                                <f:fields>
                                    <ComboBox value="{trplsRequestListModel>/reservationEmployee/Citys}" />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer >
                        <f:formElements>
                            <!-- <f:FormElement label="{i18n>CITY}">
                                <f:fields>
                                    <ComboBox value="{trplsRequestListModel>/reservationEmployee/Yname}" />
                                </f:fields>
                            </f:FormElement> -->
                            <f:FormElement label="{i18n>EXPLANATION}">
                                <f:fields>
                                    <TextArea rows="5" value="{trplsRequestListModel>/reservationEmployee/Descp}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Masraf Merkez Kodu">
                                <f:fields>
                                    <Input value="{trplsRequestListModel>/reservationEmployee/Iname}" showValueHelp="true" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>BUDGET_CODE}">
                                <f:fields>
                                    <Input value="{trplsRequestListModel>/reservationEmployee/Oname}" showValueHelp="true" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Talep Kayıt Tarihi">
                                <f:fields>
                                    <DatePicker value="{path:'trplsRequestListModel>/reservationEmployee/Rered', 
                                        type: 'sap.ui.model.type.Date', 
                                        formatOptions: {UTC:true , pattern: 'dd.MM.yyyy'}}">
                                    </DatePicker>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Rezarvasyon Yapıldı">
                                <f:fields>
                                    <CheckBox selected="{trplsRequestListModel>/reservationEmployee/Resma}" />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>SEND_ACTION}" icon="sap-icon://paper-plane" visible='{globalOverTimeRequestModel>/overTimeRequestActionData/changeVisible}' press="onSaveSendEmploymentRequest" type="Emphasized"/>
                <Button text="{i18n>SAVE_BUTTON}" icon="sap-icon://save" press=".onReservationSaveButton" type="Accept" visible="true"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
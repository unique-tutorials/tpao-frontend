<mvc:View controllerName="zhcm_ux_lms_abr.controller.TrplsApp"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core">

    <Page showFooter="true" showHeader="true" floatingFooter="true" showNavButton="true" navButtonPress="onNavBack" title="{i18n>STU_TRAV_RES}">
        <VBox class="sapUiSmallMargin">
            <f:Form editable="true">
                <f:title>
                    <core:Title text="{i18n>RESERVATION_SEARCH}" />
                </f:title>
                <f:layout>
                    <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>RESERVATION_REQUEST_NUMBER}">
                                <f:fields>
                                    <Input id="idInput" value="{ parts: [{path: 'trplsRequestListModel>/newNumberReserRequest/Rezno'},{path: 'trplsRequestListModel>/newNumberReserRequest/Ename'}] , formatter: '.formatter.convertZeroObjectNumber'}" valueHelpOnly="true" showValueHelp="true" valueHelpRequest=".onShowReservationSearchHelp"/>
                                    <Button text="{i18n>QUESTION_BUTTON}" type="Emphasized" press=".onSearchReservationPress"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        <VBox class="sapUiSmallMargin">
            <f:Form editable="true">
                <f:title>
                    <core:Title text="{i18n>RESERVATION_INFORMATION}" />
                </f:title>
                <f:layout>
                    <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>STUDENT_NUMBER}">
                                <f:fields>
                                    <Input value="{trplsRequestListModel>/reservationEmployee/Pernr}" enabled="{trplsRequestListModel>/aplicationSetting/enabled}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>STUDENT_NAME}">
                                <f:fields>
                                    <Input value="{trplsRequestListModel>/reservationEmployee/Vorna}" enabled="{trplsRequestListModel>/aplicationSetting/enabled}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>STUDENT_SURNAME}">
                                <f:fields>
                                    <Input value="{trplsRequestListModel>/reservationEmployee/Nachn}" enabled="{trplsRequestListModel>/aplicationSetting/enabled}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>DEPARTURE_DATE}">
                                <f:fields>
                                    <DatePicker value="{path:'trplsRequestListModel>/reservationEmployee/Depda', 
                                        type: 'sap.ui.model.type.Date', 
                                        formatOptions: {UTC:true , pattern: 'dd.MM.yyyy'}}" enabled="{trplsRequestListModel>/aplicationSetting/enabled}">
                                    </DatePicker>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>RETURN_DATE}">
                                <f:fields>
                                    <DatePicker value="{path:'trplsRequestListModel>/reservationEmployee/Retda', 
                                        type: 'sap.ui.model.type.Date', 
                                        formatOptions: {UTC:true , pattern: 'dd.MM.yyyy'}}" enabled="{trplsRequestListModel>/aplicationSetting/enabled}">
                                    </DatePicker>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>OR_LAND1}">
                                <f:fields>
                                    <ComboBox items="{ path:'/ValueHelpSet' , length : '500', filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Conry' } ] }" selectedKey="{trplsRequestListModel>/reservationEmployee/Conry}" enabled="{trplsRequestListModel>/aplicationSetting/enabled}" change=".onTypeChange">
                                        <core:ListItem additionalText="{Group}" key="{Key}" text="{Value}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>STATE}">
                                <f:fields>
                                    <ComboBox id="idCityComboBox" items="{ path:'/ValueHelpSet' , length : '500', filters:[{path: 'Id' , operator : 'EQ' , value1 : 'Citys' } ] }" selectedKey="{trplsRequestListModel>/reservationEmployee/Citys}" enabled="{trplsRequestListModel>/aplicationSetting/enabled}">
                                        <core:ListItem additionalText="{Group}" key="{Key}" text="{Value}" />
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer >
                        <f:formElements>
                            <f:FormElement label="{i18n>EXPLANATION}">
                                <f:fields>
                                    <TextArea rows="5" value="{trplsRequestListModel>/reservationEmployee/Descp}" enabled="{trplsRequestListModel>/aplicationSetting/enabled}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>REQ_REG_DT}">
                                <f:fields>
                                    <DatePicker value="{path:'trplsRequestListModel>/reservationEmployee/Rered', 
                                        type: 'sap.ui.model.type.Date', 
                                        formatOptions: {UTC:true , pattern: 'dd.MM.yyyy'}}" enabled="{trplsRequestListModel>/aplicationSetting/enabled}">
                                    </DatePicker>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>EMAIL_SENT}">
                                <f:fields>
                                    <CheckBox selected="{trplsRequestListModel>/reservationEmployee/Sent}" enabled="{trplsRequestListModel>/aplicationSetting/enabled}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>RES_MADE}">
                                <f:fields>
                                    <CheckBox selected="{trplsRequestListModel>/reservationEmployee/Resma}" enabled="{trplsRequestListModel>/aplicationSetting/enabled}" />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>SEND}" icon="sap-icon://paper-plane" press=".onReservationSendMailButton" type="Emphasized" visible="true"/>
                <Button text="{i18n>SAVE_BUTTON}" icon="sap-icon://save" press=".onReservationSaveButton" type="Accept" visible="true"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
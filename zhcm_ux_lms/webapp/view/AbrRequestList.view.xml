                                <Column minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="{i18n>UNDERGRADUATE_GRADUATION_AREA}"/>
                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true">

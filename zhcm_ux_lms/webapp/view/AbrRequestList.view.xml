                                                    </MultiComboBox>
                                                </fb:control>
                                            </fb:FilterGroupItem>
                                            <fb:FilterGroupItem name="SupplierName" label="{i18n>PREFERRED_COUNTRY_COUNTRIES_TO_STUDY_PRI}" groupName="Group6" visibleInFilterBar="true">

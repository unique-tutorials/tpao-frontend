                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="{i18n>MASTER_DEGREE_FIELD_EN}"/>
                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true">

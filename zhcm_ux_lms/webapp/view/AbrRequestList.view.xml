                </IconTabFilter>
                <IconTabFilter icon="sap-icon://decline" iconColor="Negative" count="{abrRequestListModel>/searchResults/REJ}" text="{i18n>REJECTED_REQUESTS}" key="REJ">
                    <content>
                        <Table id="idDeclineTable" busy="{abrRequestListModel>/tableBusy}" width="auto" items="{abrRequestListModel>/RequestList}" noDataText="{i18n>NO_DATA}" busyIndicatorDelay="{abrRequestListModel>/tableBusyDelay}" growing="true" growingScrollToLoad="true" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders">

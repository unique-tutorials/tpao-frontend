<mvc:View controllerName="zhcm_ux_lms_abr.controller.AbrFileUpload"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar">

    <Page showFooter="true" showHeader="true" floatingFooter="true" showNavButton="true" navButtonPress="onNavBack" title="Burslu Öğrenci Maaşları">
        <f:DynamicPage>
            <f:header>
                <f:DynamicPageHeader>
                    <f:content>
                        <fb:FilterBar id="filterBarWage" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
                            <fb:filterGroupItems>
                                <fb:FilterGroupItem name="Name" label="{i18n>YEAR_MONTH}" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <DatePicker value="{
                                                path: 'wageRequestListModel>/wageSearchRequest/Wagpe',
                                                type: 'sap.ui.model.type.Date',
                                               
                                                formatOptions: {
                                                    source: {
                                                        pattern: 'yyyyMM'
                                                    },
                                                    pattern: 'MM-y'
                                                }
                                            }" class="sapUiSmallMarginBottom" />
                                    </fb:control>
                                </fb:FilterGroupItem>

                            </fb:filterGroupItems>
                        </fb:FilterBar>
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <Table id="idSalariesSetTable" inset="false" items="{/StudentSalariesSet}" class="lmsTable">
                    <infoToolbar>
                        <Toolbar>
                                <Title text="Maaş Tablosu" level="H2"/>
                                <ToolbarSpacer />
                                <Button text="{i18n>QUESTION_BUTTON}" press=".onSearchSalariesButton" type="Neutral" />
                          
                        </Toolbar>
                    </infoToolbar>
                    <columns>
                        <Column>
                            <Text text="{i18n>STUDENT_NUMBER}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>OR_ENAME}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>STATIONARY}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>WAGE}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>RESTRICTED_SALARY}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>TOTAL_NUMBER}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>CURRENCY}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>EXTRA_DAYS}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>TO_WHICH_ACCOUNT}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>PAYMENT_TYPE}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>PAY_DATE}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>APPRO_STATUS}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>TO_SENT}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>PAID}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>ACTION_LIST}"/>
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Text text="{Pernr}" />
                                <Text text="{Ename}" />
                                <Text text="{Stafe}" />
                                <Text text="{Salry}" />
                                <Text text="{Consa}" />
                                <Text text="{Totwg}" />
                                <Text text="{Waers}" />
                                <Text text="{Extda}" />
                                <Text text="{Wacstx}" />
                                <Text text="{Paytpt}" />
                                <Text text="{Augdt}" />
                                <Text text="{Appstx}" />
                                <CheckBox selected="{Sent}" enabled="false" />
                                <CheckBox selected="{Paid}" enabled="false" />
                                <Button icon="sap-icon://menu" type="Accept" press=".onSalariesActions" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </f:content>
        </f:DynamicPage>
    </Page>
</mvc:View>
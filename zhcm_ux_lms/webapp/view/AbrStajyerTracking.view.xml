<mvc:View controllerName="zhcm_ux_lms_abr.controller.AbrTracking"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">

    <Page showFooter="true" showHeader="true" floatingFooter="true" showNavButton="true" navButtonPress="onNavBack" title="Stajyer Takibi">
        <VBox class="sapUiSmallMargin">
            <f:Form editable="false">
                <f:title>
                    <core:Title text="Stajyer Arama" />
                </f:title>
                <f:layout>
                    <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Stajyer No">
                                <f:fields>
                                    <Input showValueHelp="true"/>
                                    <Button text="Sorgula" type="Emphasized"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        <Panel accessibleRole="Form" backgroundDesign="Translucent" expandAnimation="true" expandable="false" expanded="true" headerText="empty string" height="400px">
            <content>
                <IconTabBar stretchContentHeight="true">
                    <items>
                        <IconTabFilter text="Genel Bilgi" key="info">
                            <f:Form editable="true">
                                <f:title>
                                    <core:Title text="Stajyer Bilgileri"/>
                                </f:title>
                                <f:layout>
                                    <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="true" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="1" singleContainerFullSize="true" />
                                </f:layout>
                                <f:formContainers>
                                    <f:FormContainer>
                                        <f:formElements>
                                            <f:FormElement label="Maaş Para Birimi">
                                                <f:fields>
                                                    <Input />
                                                    <Input />
                                                    <ComboBox />
                                                </f:fields>
                                            </f:FormElement>
                                            <f:FormElement label="Kırtasiye Ücreti">
                                                <f:fields>
                                                    <Input />
                                                    <Input />
                                                </f:fields>
                                            </f:FormElement>
                                            <f:FormElement label="Yurtiçi Dil Öğrenimi Süresi">
                                                <f:fields>
                                                    <Input>
                                                        <layoutData>
                                                            <l:GridData span="XL1 L1 M1 S4" />
                                                        </layoutData>
                                                    </Input>
                                                    <Text text="Yıl"/>
                                                    <Input>
                                                        <layoutData>
                                                            <l:GridData span="XL1 L1 M1 S4" />
                                                        </layoutData>
                                                    </Input>
                                                    <Text text="Ay"/>
                                                    <Input>
                                                        <layoutData>
                                                            <l:GridData span="XL1 L1 M1 S4" />
                                                        </layoutData>
                                                    </Input>
                                                    <Text text="Gün"/>
                                                </f:fields>
                                            </f:FormElement>
                                        </f:formElements>
                                    </f:FormContainer>
                                    <f:FormContainer>
                                        <f:formElements>
                                            <f:FormElement label="Maaş Ödenir">
                                                <f:fields>
                                                    <CheckBox enabled="false"/>
                                                </f:fields>
                                            </f:FormElement>
                                            <f:FormElement label="Kırtasiye Ödenir">
                                                <f:fields>
                                                    <CheckBox enabled="false"/>
                                                </f:fields>
                                            </f:FormElement>

                                        </f:formElements>
                                    </f:FormContainer>
                                    <f:FormContainer>
                                        <f:formElements>
                                            <f:FormElement label="Ödeme Yapılacak Hesap">
                                                <f:fields>
                                                    <ComboBox />
                                                    <Button text="Evraklar" type="Emphasized"/>
                                                </f:fields>
                                            </f:FormElement>
                                        </f:formElements>
                                    </f:FormContainer>

                                </f:formContainers>
                            </f:Form>
                        </IconTabFilter>
                        <IconTabFilter text="Okul Bilgileri" key="attachments">
                            <Text text="Attachments go here ..." />
                        </IconTabFilter>
                        <IconTabFilter text="Öğrenim Bilgileri" key="notes">
                            <Table mode="MultiSelect" busy="{approvalRequestListModel>/tableBusy}" width="auto" items="{approvalRequestListModel>/requestList}" noDataText="{i18n>NO_DATA}" busyIndicatorDelay="{approvalRequestListModel>/tableBusyDelay}" growing="true" growingScrollToLoad="true" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders">
                                <columns>
                                    <Column id="idRequestNumberColumn">
                                        <Text text="Okul Türü"/>
                                    </Column>
                                    <Column >
                                        <Text text="Başlangıç Tarihi"/>
                                    </Column>
                                    <Column >
                                        <Text text="Bitiş Tarihi"/>
                                    </Column>
                                    <Column >
                                        <Text text="Mevzuniyet Durumu"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Navigation" press="onAvailableRequestActions">
                                        <cells>
                                            <Text text="{approvalRequestListModel>Reqno}"/>
                                            <Text text="{approvalRequestListModel>Trnam}"/>
                                            <Text text="{approvalRequestListModel>Trtyp}"/>
                                            
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </IconTabFilter>
                        <IconTabFilter text="İletişim Bilgileri" key="people">
                            <Text text="People content goes here ..." />
                        </IconTabFilter>
                        <IconTabFilter text="Adres Bilgileri" key="people">
                            <Text text="People content goes here ..." />
                        </IconTabFilter>
                        <IconTabFilter text="Eğitimler" key="people">
                            <Text text="People content goes here ..." />
                        </IconTabFilter>
                        <IconTabFilter text="Faliyetler" key="people">
                            <Text text="People content goes here ..." />
                        </IconTabFilter>
                        <IconTabFilter text="Ödevlendirmeler" key="people">
                            <Text text="People content goes here ..." />
                        </IconTabFilter>
                        <IconTabFilter text="Görevlendirmeler" key="people">
                            <Text text="People content goes here ..." />
                        </IconTabFilter>
                    </items>

                </IconTabBar>
            </content>
            <headerToolbar>
            </headerToolbar>
            <infoToolbar>
            </infoToolbar>
        </Panel>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>EDIT_ACTION}" type="Attention" icon="sap-icon://edit" press="onCancelCreatePage"/>
                <Button text="{i18n>DISPLAY_ACTION}" type="Neutral" icon="sap-icon://display" press="onCancelCreatePage"/>
                <Button text="{i18n>DELETE_ACTION}" type="Reject" icon="sap-icon://delete" press="onCancelCreatePage"/>
                <Button text="Kaydet" icon="sap-icon://paper-plane" visible='{globalOverTimeRequestModel>/overTimeRequestActionData/changeVisible}' press="onSaveSendEmploymentRequest" type="Emphasized"/>
               
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
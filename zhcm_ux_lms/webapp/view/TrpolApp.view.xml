<mvc:View controllerName="zhcm_ux_lms_abr.controller.TrpolApp"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar">
    <Page showFooter="true" showHeader="true" floatingFooter="true" showNavButton="true" navButtonPress="onNavBack" title="{i18n>STAFF_TRQ}">
        <f:DynamicPage>
            <f:header>
                <f:DynamicPageHeader>
                    <f:content>
                        <fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onReservationSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
                            <fb:filterGroupItems>
                                <fb:FilterGroupItem name="StudentNumber" label="{i18n>STUDENT_NUMBER}" groupName="Group1" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input value="{trpolRequestListModel>/reserSearchParameter/Pernr}"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem name="Name" label="{i18n>OR_VORNA}" groupName="Group2" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input value="{trpolRequestListModel>/reserSearchParameter/Vorna}"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem name="SName" label="{i18n>OR_NACHN}" groupName="Group3" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input value="{trpolRequestListModel>/reserSearchParameter/Nachn}" />
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem name="Date" label="{i18n>REQUEST_REGISTRATION_DATE_RANGE}" groupName="Group4" visibleInFilterBar="true">
                                    <fb:control>
                                        <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                                            <!-- <DatePicker value="{path:'trpolRequestListModel>/reserSearchParameter/Rered', 
                                            type: 'sap.ui.model.type.Date', formatOptions:{ UTC: true, pattern: 'dd.MM.yyyy'}}"/> -->
                                            <DateRangeSelection 
                                            dateValue="{trpolRequestListModel>/absenceFilter/begda}" 
                                            secondDateValue="{trpolRequestListModel>/absenceFilter/endda}" 
                                            width="13rem" 
                                            class="DRS1" 
                                            change="handleChange" />
                                        </FlexBox>
                                    </fb:control>
                                </fb:FilterGroupItem>
                            </fb:filterGroupItems>
                        </fb:FilterBar>
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <Table id="reservationTable" inset="false" class="sapUiSmallMarginBottom" items="{trpolRequestListModel>/travelRequestList}">
                    <columns>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>RESERVATION_MADE}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>REQUEST_NUMBER}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>STUDENT_NUMBER}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>OR_ENAME}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>OR_LAND1}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>CITY}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>ENTRY_DATE}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>RETURN_DATE}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>EXPLANATION}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>REQUEST_REGISTRATION_DATE}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Active" press=".onItemSelected">
                            <cells>
                                <CheckBox selected="{trpolRequestListModel>Resma}" enabled="false"/>
                                <Text text="{trpolRequestListModel>Rezno}"/>
                                <Text text="{trpolRequestListModel>Pernr}"/>
                                <ObjectIdentifier title="{trpolRequestListModel>Vorna}" text="{trpolRequestListModel>Nachn}" />
                                <Text text="{trpolRequestListModel>Landx}"/>
                                <Text text="{trpolRequestListModel>Bezei}"/>
                                <Text text="{
                                    path: 'trpolRequestListModel>Depda', 
                                    type: 'sap.ui.model.type.Date', 
                                    formatOptions: { 
                                        pattern: 'dd.MM.yyyy', 
                                        UTC: true 
                                    }
                                }"/>
                                <Text text="{
                                    path: 'trpolRequestListModel>Retda', 
                                    type: 'sap.ui.model.type.Date', 
                                    formatOptions: { 
                                        pattern: 'dd.MM.yyyy', 
                                        UTC: true 
                                    }
                                }"/>
                                <Text text="{trpolRequestListModel>Descp}"/>
                                <Text text="{
                                    path: 'trpolRequestListModel>Rered', 
                                    type: 'sap.ui.model.type.Date', 
                                    formatOptions: { 
                                        pattern: 'dd.MM.yyyy', 
                                        UTC: true 
                                    }
                                }"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </f:content>
        </f:DynamicPage>
    </Page>
</mvc:View>